<div class="page-wrapper">
    <div class="container-fluid">
        <div class="d-flex align-items-center m-t-30 m-b-20">
            <h4 class="title">
                <a href="/staff">
                    Quản lý nhân viên
                </a>
                <i class="fa fa-angle-right p-r-10 p-l-10"></i>
                Thêm mới
            </h4>
        </div>
        <div class="row ">
            <div class="col-lg-12">
                <div class="card card-small">
                    <div class="card-body">
                        <form action="/staff" method="post" novalidate>
                            <div class="form-body">
                                <h4 class="box-title pb-3 text-uppercase font-weight-bold">Thông tin chung</h4>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="name">Tên nhân viên</label>
                                            <input type="text" name="name" class="form-control form-control-label"
                                                placeholder="Nhập" <% if (typeof name != "undefined" && name) { %>
                                                value="<%= name %>" <% } %> required
                                                data-validation-required-message="Vui lòng nhập Tên nhân viên"
                                                aria-invalid="true">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="phone">Số điện thoại</label>
                                            <input type="text" id="phone" name="phone"
                                                class="form-control form-control-label" placeholder="Nhập"
                                                <% if (typeof phone != "undefined" && phone) { %> value="<%= phone %>"
                                                <% } %> required
                                                data-validation-required-message="Vui lòng nhập Số điện thoại"
                                                data-validation-regex-message="Vui lòng nhập đúng định dạng SĐT"
                                                aria-invalid="true"
                                                data-validation-regex-regex="(\+84|84|0){1}([3|5|7|8|9]){1}([0-9]{8})">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="email">Email</label>
                                            <!-- <input type="text" id="email" name="email"
                                                        class="form-control form-control-label" placeholder="Nhập"> -->
                                            <input type="text" name="email" class="form-control form-control-label"
                                                placeholder="Nhập" <% if (typeof email != "undefined" && email) { %>
                                                value="<%= email %>" <% } %> required
                                                data-validation-required-message="Vui lòng nhập Email"
                                                aria-invalid="true">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="adress">Địa chỉ</label>
                                            <input type="text" id="adress" name="adress"
                                                class="form-control form-control-label" placeholder="Nhập"
                                                <% if (typeof adress != "undefined" && adress) { %>
                                                value="<%= adress %>" <% } %>>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="username">Tên đăng nhập</label>
                                            <input type="text" id="username" name="username"
                                                class="form-control form-control-label" placeholder="Nhập"
                                                <% if (typeof username != "undefined" && username) { %>
                                                value="<%= username %>" <% } %> required
                                                data-validation-required-message="Vui lòng nhập Tên đăng nhập"
                                                aria-invalid="true">
                                            <div class="help-block"></div>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="password">Mật khẩu</label>
                                            <input type="password" name="password"
                                                class="form-control form-control-label" placeholder="Nhập" required
                                                data-validation-required-message="Vui lòng nhập Mật khẩu"
                                                aria-invalid="true" required
                                                data-validation-required-message="Vui lòng nhập Mật khẩu"
                                                data-validation-regex-message="Tối thiểu 6 ký tự, ít nhất một ký tự hoa, một ký tự thường, một số và một ký tự đặc biệt"
                                                data-validation-regex-regex="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{6,}"
                                                <% if (typeof password != "undefined" && password) { %>
                                                value="<%= password %>" <% } %>>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="confirm_password">Nhập lại mật khẩu</label>
                                            <input type="password" id="confirm_password" name="confirm_password"
                                                class="form-control form-control-label" placeholder="Nhập" required
                                                data-validation-required-message="Vui lòng nhập lại mật khẩu"
                                                aria-invalid="true">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="status">Sử dụng</label>
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="status"
                                                    name="status">
                                                <label class="custom-control-label" for="status"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% if (typeof conflictError != "undefined" && conflictError) { %>
                                <div class="text-danger text-left"><%= conflictError %></div>
                                <% } %>
                                <div class="form-actions">
                                    <a href="/staff" type="button" class="btn btn-inverse">Hủy</a>
                                    <button type="submit" class="btn btn-success">Lưu</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>