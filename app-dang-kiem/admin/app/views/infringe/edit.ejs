<div class="page-wrapper">
    <div class="container-fluid">
        <div class="d-flex align-items-center m-t-30 m-b-20">
            <h4 class="title">
                <a href="/infringe">
                    Phương tiện có lỗi vi phạm
                </a>
                <i class="fa fa-angle-right p-r-10 p-l-10"></i>
                Chỉnh sửa thông tin
            </h4>
        </div>
        <div class="row ">
            <div class="col-lg-12">
                <div class="card card-small">
                    <div class="card-body">
                        <form action="/infringe/<%= infringe.id %>" method="post">
                            <div class="form-body">
                                <h4 class="box-title pb-3 text-uppercase font-weight-bold">Thông tin chung cần
                                    chỉnh
                                    sửa</h4>
                                <% if (typeof status !== 'undefined') { %>
                                <%if (status == 'success') { %>
                                <div style="color: green;">
                                    Updated Successfully
                                </div>
                                <% } else { %>
                                <div style="color: red;">
                                    Some error occurred while editing the infringe
                                </div>
                                <% } %>
                                <br>
                                <% } %>

                                <div class="row">
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="license_plate" class="control-label">Biển kiểm
                                                soát</label>
                                            <input type="text" name="license_plate" id="license_plate"
                                                class="form-control form-control-label text-uppercase"
                                                value="<%= infringe.license_plate %>">
                                        </div>
                                        <!--/span-->
                                        <!--/span-->
                                    </div>
                                    <div class=" col-md-4">
                                        <div class="form-group">
                                            <input type="hidden" name="_method" value="put">
                                            <label for="violator_name" class="control-label">Chủ phương
                                                tiện</label>
                                            <input type="text" name="violator_name" id="violator_name"
                                                class="form-control form-control-label bg-secondary readonly"
                                                value="<%= infringe.violator_name %>">
                                        </div>
                                        <!--/span-->
                                    </div>
                                    <!-- <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="infringe_date" class="control-label">Ngày vi
                                                        phạm</label>
                                                    <input name="infringe_date" id="infringe_date" type="date"
                                                        class="form-control"
                                                        value="<%= infringe.infringe_date.getFullYear()%>-<%= ("0" + (infringe.infringe_date.getMonth() + 1)).slice(-2) %>-<%=("0" + infringe.infringe_date.getDate()).slice(-2)%>">
                                                </div>
                                            </div> -->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="infringe_date" class="control-label">Ngày vi
                                                phạm</label>
                                            <div class="input-group">
                                                <input id="infringe_date" name="infringe_date" type="text"
                                                    class="form-control" autocomplete="off"
                                                    value="<%= ("0" + infringe.infringe_date.getDate()).slice(-2)%>/<%= ("0" + (infringe.infringe_date.getMonth() + 1)).slice(-2) %>/<%=infringe.infringe_date.getFullYear()%>">
                                                <label class="input-group-btn input-icon" for="infringe_date">
                                                    <span class="btn btn-default">
                                                        <span class="glyphicon glyphicon-calendar">
                                                            <img src="/assets/images/calendar.svg" />
                                                        </span>
                                                    </span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <!--/span-->
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="infringes_name">Lỗi vi phạm</label>
                                            <input type="text" id="infringes_name" name="infringes_name"
                                                class="form-control form-control-label"
                                                value="<%= infringe.infringes_name %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="handling_agency" class="control-label">Cơ quan xử
                                                lý</label>
                                            <input type="text" name="handling_agency" id="handling_agency"
                                                class="form-control form-control-label"
                                                value="<%= infringe.handling_agency %>">
                                        </div>
                                        <!--/span-->
                                        <!--/span-->
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="status">Trạng thái</label>
                                            <select class="form-control form-select" name="status" id="status">
                                                <option value="<%= infringe.status %>" selected hidden>
                                                    <% if (infringe.status === 1) { %>
                                                    <p>Đã xử lý</p>
                                                    <% } else { %>
                                                    <p>Chưa xử lý</p>
                                                    <% } %></option>
                                                <option value="1">Đã xử lý</option>
                                                <option value="0">Chưa xử lý</option>
                                            </select>
                                        </div>
                                        <!--/span-->
                                    </div>
                                </div>
                                <div class="action">
                                    <a href="/infringe" type="button" class="btn btn-inverse">
                                        Hủy
                                    </a>
                                    <button type="submit" class="btn btn-success">Lưu</button>
                                </div>
                                <!-- <a href="/infringe">
                                            <button type="reset" class="btn btn-inverse">Hủy</button>
                                        </a> -->


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>