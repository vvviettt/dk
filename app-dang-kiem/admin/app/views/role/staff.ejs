<script>
    $(function () {

        $(`.check-all-js`).on('change', function () {
            const data = $(this).data('id');
            var single_check = $(`.single-check-js[data-id='${data}']`);
            single_check.each((index, element) => {
                element.checked = this.checked;
            })
        })
        $(`.single-check-js`).on('change', function () {
            const data = $(this).data('id');
            var single_check = $(`.single-check-js[data-id='${data}']`);
            var all_checked = true;
            single_check.each((index, element) => {
                if (element.checked === false) {
                    all_checked = false;
                }
            })
            document.querySelector(`.check-all-js[data-id='${data}']`).checked = all_checked;
        })
    })
</script>