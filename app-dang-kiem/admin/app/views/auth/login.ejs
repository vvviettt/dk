<form id="loginform" class="p-20" action="/login" method="POST" novalidate>
    <div class="form-group ">
        <h5>Tài khoản <span class="text-danger">*</span></h5>
        <input type="username" name="username" class="form-control" required
            data-validation-required-message="Vui lòng nhập Tên đăng nhập" aria-invalid="true" placeholder="Nhập"
            <% if (typeof username != "undefined" && username) { %> value="<%= username %>" <% } %> required>
        <div class="help-block"></div>

    </div>
    <div class="form-group">
        <h5>Mật khẩu <span class="text-danger">*</span></h5>
        <input type="password" name="password" class="form-control" placeholder="Nhập" required
            data-validation-required-message="Vui lòng nhập Mật khẩu"
            data-validation-regex-message="Tối thiểu 6 ký tự, ít nhất một ký tự hoa, một ký tự thường, một số và một ký tự đặc biệt"
            aria-invalid="true"
            data-validation-regex-regex="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{6,}"
            <% if (typeof password != "undefined" && password) { %> value="<%= password %>" <% } %>>
        <div class="help-block"></div>
    </div>
    <% if (typeof conflictError != "undefined" && conflictError) { %>
    <div class="p-2 mb-4 bg-danger text-white text-center rounded"><%= conflictError %></div>
    <% } %>
    <div class="form-group row">
        <div class="col-md-12">
            <div class="d-flex no-block align-items-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                    <label class="custom-control-label" for="customCheck1">Remember me</label>
                </div>
                <div class="ml-auto">
                    <a href="/password/reset" class="text-muted"><i class="fas fa-lock m-r-5"></i>
                        Forgot pwd?</a>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <div class="col-xs-12 ">
            <button class="btn btn-block btn-lg btn-info text-uppercase" type="submit">Đăng
                nhập</button>
        </div>
    </div>
</form>
<form class="form-horizontal" id="recoverform" action="/password/email" method="post">
    <div class="form-group ">
        <div class="col-xs-12 text-center">
            <h3 class=" pt-3 text-uppercase text-fw700">Khôi phục mật khẩu</h3>
            <p class="text-muted">Nhập Email và mật khẩu mới sẽ được gửi tới bạn! </p>
        </div>
    </div>
    <div class="form-group ">
        <div class="col-xs-12">
            <input class="form-control" type="text" required="" placeholder="Email"> </div>
    </div>
    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-info btn-block btn-lg text-uppercase waves-effect waves-light" type="submit">đặt lại
                mật khẩu</button>
        </div>
    </div>
</form>