<div class="page-wrapper">
    <div class="container-fluid">
        <div class="d-flex align-items-center m-t-30 m-b-20">
            <h4 class="title">
                <a href="/type">
                    Phí bảo trì đường bộ
                </a>
                <i class="fa fa-angle-right p-r-10 p-l-10"></i>
                Thêm mới
            </h4>
        </div>
        <div class="row ">
            <div class="col-lg-12">
                <div class="card card-small">
                    <div class="card-body ">
                        <form action="/type" method="post" novalidate>
                            <div class="form-body">
                                <h4 class="box-title pb-3 text-uppercase font-weight-bold">Thông tin chung</h4>
                                <% if (typeof status !=='undefined' ) { %>
                                <%if (status=='success' ) { %>
                                <div style="color: green;">
                                    Created Successfully
                                </div>
                                <% } else { %>
                                <div style="color: red;">
                                    Some error occurred while creating the type
                                </div>
                                <% } %>
                                <br>
                                <% } %>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="name">Loại phương tiện chịu phí</label>
                                            <input type="text" id="name" name="name"
                                                class="form-control form-control-label" placeholder="Nhập" required
                                                data-validation-required-message="Vui lòng nhập Loại phương tiện chịu phí"
                                                aria-invalid="true">
                                            <div class="help-block"></div>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Chủng loại phương tiện</label>
                                            <select class="form-control form-select" name="vehicle_category_id"
                                                id="vehicle_category_id" required
                                                data-validation-required-message="Vui lòng chọn Chủng loại phương tiện">
                                                <option selected hidden value="">- Chọn -</option>
                                                <% type.map((item, index) => { %>
                                                <option value="<%= item.id %>"><%= item.name %></option>
                                                <% }) %>
                                            </select>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="road_fee">Mức phí/tháng</label>
                                            <!-- <input pattern="^\đ\d{1,3}(.\d{3})*(\.\d+)?đ" data-type="currency" type="text" id="road_fee" name="road_fee"
                                                    class="form-control form-control-label" placeholder="0"> -->

                                            <div class="input-group">
                                                <input data-type="currency" type="text" id="road_fee" name="road_fee"
                                                    class="form-control form-control-label"
                                                    aria-label="Amount (to the nearest dollar)" placeholder="0" required
                                                    data-validation-required-message="Vui lòng nhập Mức phí/tháng"
                                                    data-validation-regex-message="Vui lòng nhập đúng định dạng mức phí"
                                                    aria-invalid="true"
                                                    data-validation-regex-regex="([1-9]\d{0,2}(.\d{3})*)|0">
                                                <div class="input-group-append">
                                                    <span class="input-group-text">đ</span>
                                                </div>
                                            </div>
                                            <div class="help-block"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <a href="/type" type="button" class="btn btn-inverse">Hủy</a>
                                    <button type="submit" class="btn btn-success">
                                        Lưu</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>