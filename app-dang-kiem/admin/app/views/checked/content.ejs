<div class="page-wrapper">
    <div class="container-fluid">
        <div class="d-flex align-items-center m-t-30 m-b-20">
            <h4 class="title">
                <a href="/management">
                    Quản lý đăng kiểm
                </a>
                <i class="fa fa-angle-right p-r-10 p-l-10"></i>
                <a href="/checked">
                    Đã đăng kiểm
                </a>
                <i class="fa fa-angle-right p-r-10 p-l-10"></i>
                Chi tiết
            </h4>
        </div>
        <div class="row ">
            <div class="col-lg-12">
                <div class="card card-small">
                    <div class="card-body">
                        <h4 class="box-title p-b-20 font-weight-bold text-uppercase">Thông tin chung</h4>
                        <div class="row pt-3">
                            <div class="col-md-4">
                                <h6>Loại phượng
                                    tiện</h6>
                                <p class="font-weight-bold"><%= checked.types_name %></p>
                            </div>
                            <div class="col-md-4">
                                <h6>Biển kiểm
                                    soát</h6>
                                <p class="font-weight-bold text-uppercase"><%= checked.license_plate %></p>
                            </div>
                            <div class="col-md-4">
                                <h6>Chủ phương
                                    tiện</h6>
                                <p class="font-weight-bold"><%= checked.owner_name %></p>
                            </div>
                        </div>
                        <hr />
                        <div class="row pt-3">
                            <div class="col-md-4">
                                <h6>Số điện thoại</h6>
                                <p class="font-weight-bold"><%= checked.owner_phone %></p>
                            </div>
                            <div class="col-md-4">
                                <h6>Ngày đăng kiểm</h6>
                                <p class="font-weight-bold">
                                    <%=("0" + checked.date.getDate()).slice(-2)%>/<%= ("0" + (checked.date.getMonth() + 1)).slice(-2) %>/<%= checked.date.getFullYear()%>
                                </p>
                            </div>
                            <%if (checked.address === null | checked.address == '') { %>
                            <% } else { %>
                            <div class="col-md-4">
                                <h6>Đăng kiểm hộ</h6>
                                <img src="/assets/images/Group.svg" />
                            </div>
                            <% } %>
                        </div>

                        <div class="row pt-3">
                            <%if (checked.address === null | checked.address == '') { %>
                            <% } else { %>
                            <div class="col-md-4">
                                <h6>Địa chỉ nhận xe</h6>
                                <p class="font-weight-bold"><%= checked.address %></p>
                            </div>
                            <div class="col-md-4">
                                <h6>Nhân viên nhận xe</h6>
                                <p class="font-weight-bold"><%= checked.staff_name %></p>
                            </div>
                            <div class="col-md-4">
                                <h6>Thời gian nhận xe</h6>
                                <p class="font-weight-bold"><%= checked.car_delivery_time %></p>
                            </div>
                            <% } %>
                            <%if (checked.status == 1) { %>
                            <% } else { %>
                            <div class="col-md-4">
                                <h6>Có hiệu lực đến ngày</h6>
                                <p class="font-weight-bold">
                                    <%=("0" + checked.plan_date.getDate()).slice(-2)%>/<%= ("0" + (checked.plan_date.getMonth() + 1)).slice(-2) %>/<%= checked.plan_date.getFullYear()%>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6>Ngày đóng phí BTĐB</h6>
                                <p class="font-weight-bold">
                                    <%=("0" + checked.payment_date.getDate()).slice(-2)%>/<%= ("0" + (checked.payment_date.getMonth() + 1)).slice(-2) %>/<%= checked.payment_date.getFullYear()%>
                                </p>
                            </div>
                            <% } %>
                        </div>
                        <hr />
                        <% if (checked.status == 1) { %>
                        <div class="row pt-2">
                            <div class="col-md-12">
                                <span class='unprocess'>Không đạt</span>
                            </div>
                            <% } else { %>
                            <div class="col-md-12">
                                <span class='processed'>Đạt</span>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    <div class=" pt-3">
                        <div class="card-small ">
                            <a href="/checked" type="button" class="btn btn-inverse">Đóng</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>